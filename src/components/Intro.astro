---
import { Image } from "astro:assets";
import Profile from "../assets/profile-pic.jpg";
import { fade } from "astro:transitions";
import GaleryBtn from "./GaleryBtn.astro";

const year = new Date().getFullYear() - 2006;
---

<main class="flex flex-col items-center h-full">
  <div
    class="flex flex-col items-start justify-top mt-8 h-3/4 w-3/4"
    transition:animate={fade({ duration: 1000 })}
  >
    <Image
      src={Profile}
      alt="Profile pic of Brendon Mecoy"
      class="rounded-full h-80 w-80"
      height={200}
      width={200}
    />

    <div class="bg-black/50 p-4 rounded-2xl">
      <h1 class="text-3xl font-bold text-white">
        Hi, I'm <a href="/about" class="un"
          ><span class="text-blue-400">Brendon Mecoy</span></a
        >, a senior locksmith at Master Keys.
      </h1>
      <h2 class="text-2xl font-bold text-white">
        I have <span class="text-orange-400">{year} years experience</span> in the
        locksmith industry.
      </h2>
      <h3 class="text-2xl font-bold text-white">
        This is my portfolio website, welcome.
      </h3>
    </div>
    <div class="flex flex-col items-center justify-center gap-4 mt-8">
      <GaleryBtn />
    </div>
  </div>
</main>

<style>
  main {
    background-image: url("../assets/vault-bg.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .un {
    display: inline-block;
  }

  .un::after {
    content: "";
    width: 0px;
    height: 3px;
    display: block;
    background: rgb(6, 224, 240);
    transition: 300ms;
  }

  .un:hover::after {
    width: 100%;
  }
</style>
